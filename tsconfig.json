{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*", "unittest/*", "node_modules/*"]
    },
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "allowJs": true,
    "checkJs": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "pretty": true,
    "strictNullChecks": true,
    "jsx": "react",
    "sourceMap": true
  },
  "lib": ["es2015"],
  "include": ["src", "img"]
}
